{
	"name": "Jhipster Telephone",
	"image": "mcr.microsoft.com/devcontainers/java:21-bullseye",
	"customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.vscode-xml",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
	"features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "sudo apt update && sudo apt install -y maven && mvn --version",
	
	"forwardPorts": [8080, 3306],
	"portsAttributes": {
	  "8080": { "label": "Spring Boot App" },
	  "3306": { "label": "MySQL Database" }
	},
	
	
	"runArgs": ["--network=host"],
	"mounts": [
	  "source=maven-cache,target=/root/.m2,type=volume"
	]
  }
  